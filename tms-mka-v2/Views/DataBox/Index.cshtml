@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Data Box";
    string currentController = (string)ViewContext.RouteData.Values["controller"];
    string currentAction = "Index";
}
<div class="portlet light ">
    <div class="portlet-title">
        <div class="caption">
            <span class="caption-subject font-dark sbold uppercase">@ViewBag.Title</span>
        </div>
        <div class="actions">
            <a class="btn btn-sm green dropdown-toggle"
               href="@Url.Action("Add","DataBox")">
                <i class="fa fa-plus"></i>Add
            </a>
            <a class="btn btn-sm green"
               href="~/Content/Template/TemplateDataBox.xlsx" target="_blank">
                <i class="fa fa-plus"></i>Download template
            </a>
            <a class="btn btn-sm green"
               data-toggle="modal" href="#ModalDataBox">
                <i class="fa fa-plus"></i>Import
            </a>
            <a class="btn btn-sm green" href="@Url.Action("ExportDataBox")">
                <i class="fa fa-upload"></i>Export
            </a>
        </div>
    </div>
    <div class="portlet-body form">
        <div class="portlet box blue ">
            <div class="portlet-title">
                <div class="caption">
                    Hide Column :
                </div>
                <div class="tools">
                    <a href="" class="expand"> </a>
                </div>
            </div>
            <div class="portlet-body form" style="display: none;">
                <form role="form">
                    <div class="form-body">
                        <div id="content-col" class="md-checkbox-inline" style="margin-left:10px"></div>
                    </div>
                </form>
            </div>
        </div>
        <div id="grid"></div>
    </div>
</div>

<!-- /.modal -->
<div class="modal fade bs-modal-sm" id="ModalDataBox" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Import Data Box</h4>
            </div>
            <div class="modal-body">
                <input name="filesDataBox" id="filesDataBox" type="file" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn dark btn-outline" data-dismiss="modal" onclick="uploadDataBox()">Import</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->
@section scripts
{
    <script type="text/javascript">
        var kendoUploadButtonExim;

        function deleteItem(e) {
            e.preventDefault();
            var data = this.dataItem(getDataRowGrid(e));
            goToDeletePage('@Url.Action("Delete")' + "?id=" + data.Id, this.dataSource);
        }

        function editItem(e) {
            e.preventDefault();
            var data = this.dataItem(getDataRowGrid(e));
            window.location.href = "@Url.Action("Edit")" + "?id=" + data.Id;
        }

        function uploadDataBox() {
            if (kendoUploadButtonExim)
                totalFile = 0;
            kendoUploadButtonExim.click();
        }

        function onSelectFile(e) {
            var flagExtension = 0;
            var allowedExtension = [".xlsx", ".xls"];
            $.each(e.files, function (index, value) {
                if ($.inArray((value.extension).toLowerCase(), allowedExtension) === -1) {
                    flagExtension = 1;
                }
            });
            if (flagExtension == 1) {
                alert("File yang diperbolehkan hanya berupa Excell");
                e.preventDefault();
            }

            setTimeout(function () {
                kendoUploadButtonExim = $(".k-upload-selected");
                kendoUploadButtonExim.hide();
            }, 1);
        }

        $(document).ready(function () {
            CreateUploaderExim($("#filesDataBox"), "@Url.Action("UploadDataBox")", $("#grid"));


            currController = '@currentController';
            currAction = '@currentAction';

            var ds = new kendo.data.DataSource({
                transport: {
                    read: {
                        url: '@Url.Action("Binding")',
                        dataType: "json"
                    },
                },
                schema: {
                    total: "total",
                    data: "data",
                    model: {
                        fields: {
                            "Id": { type: "number" },
                            "NoBox": { type: "string" },
                            "VehicleNo": { type: "string" },
                            "Karoseri": { type: "string" },
                            "Tahun": { type: "number" },
                            "StrType": { type: "string" },
                            "StrKategori": { type: "string" },
                            "strLantai": { type: "string" },
                            "strDinding": { type: "string" },
                            "PintuSamping": { type: "boolean" },
                            "Sekat": { type: "boolean" },
                        }
                    }
                },
                pageSize: 10,
                pageable: true,
                serverFiltering: true,
                serverPaging: true,
                serverSorting: true,
                sortable: true,
                //sort: { field: "SubmittedDate", dir: "desc" }
            });

            gridIndex = $("#grid").kendoGrid({
                dataSource: ds,
                filterable: kendoGridFilterable,
                sortable: true,
                reorderable: true,
                resizable: true,
                pageable: true,
                groupable: true,
                //height: "615",
                columns: [
                    {
                        command: [
                            {
                                name: "edit",
                                text: "edit",
                                click: editItem,
                                imageClass: "glyphicon glyphicon-edit",
                                template: '<a class="k-button-icon #=className#" #=attr# href="\\#"><span class="#=imageClass#"></span></a>'
                            },
                            {
                                name: "delete",
                                text: "delete",
                                click: deleteItem,
                                imageClass: "glyphicon glyphicon-remove",
                                template: '<a class="k-button-icon #=className#" #=attr# href="\\#"><span class="#=iconClass# #=imageClass#"></span></a>'
                            }
                        ],
                        width: "60px"
                    },
                    {
                        field: "NoBox",
                        title: "No Box",
                        width: "140px"
                    },
                    {
                        field: "VehicleNo",
                        title: "No Vehicle",
                        width: "140px"
                    },
                    {
                        field: "Karoseri",
                        title: "Karoseri",
                        width: "150px"
                    },
                    {
                        field: "Tahun",
                        title: "Tahun",
                        width: "140px"
                    },
                    {
                        field: "StrType",
                        title: "Type",
                        width: "140px"
                    },
                    {
                        field: "StrKategori",
                        title: "Kategori",
                        width: "150px"
                    },
                    {
                        field: "strLantai",
                        title: "Lantai",
                        width: "150px"
                    },
                    {
                        field: "strDinding",
                        title: "Dinding",
                        width: "150px"
                    },
                    {
                        field: "PintuSamping",
                        title: "Pintu Samping",
                        template: '#= PintuSamping ? "Ya" : "Tidak" #',
                        width: "140px"
                    },
                    {
                        field: "Sekat",
                        title: "Sekat",
                        template: '#= Sekat ? "Ya" : "Tidak" #',
                        width: "140px"
                    }
                ],
            }).data("kendoGrid");

            @foreach (tms_mka_v2.Context.UserReference item in (List<tms_mka_v2.Context.UserReference>)ViewBag.listKolom)
            {
                <text>
            listKolom.push('@item.Coloumn');
            </text>
            }

            GetColomnData(gridIndex);
        })
    </script>
}


