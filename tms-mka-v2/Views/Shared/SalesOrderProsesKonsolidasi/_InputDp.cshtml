@using tms_mka_v2.Models;
@model tms_mka_v2.Models.SalesOrderProsesKonsolidasi
<div class="portlet light">
    <div class="portlet-title">
        <div class="caption font-green-sharp">
            <span class="caption-subject"> Input Dp</span>
        </div>
        <div class="tools">
            <a href="" class="collapse"> </a>
        </div>
        <div class="actions">
            <a href="#ModalFormDp" data-toggle="modal" class="btn btn-circle btn-default" onclick="clearFormDp()">
                <i class="fa fa-plus"></i> Add
            </a>
        </div>
    </div>
    <div class="portlet-body">
        <div id="GirdDp"></div>
    </div>
</div>

<div id="ModalFormDp" class="modal fade bs-modal-lg" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                @*<h4 class="modal-title">Product Type</h4>*@
            </div>
            <div class="modal-body">
                <form id="FormDp" class="form-horizontal">
                    @Html.Hidden("IdDp")
                    <div class="form-group">
                        <label class="control-label col-md-3">Tanggal<span style="color:red;">*</span></label>
                        <div class="col-md-7">
                            <input id="TanggalDp" name="TanggalDp" class="form-control-datepicker" required data-required-msg="Tanggal harus diisi" />
                            <span class="k-invalid-msg" data-for="TanggalDp"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3">Penerima<span style="color:red;">*</span></label>
                        <div class="col-md-7">
                            <input id="PenerimaDp" name="PenerimaDp" class="form-control input-sm" required data-required-msg="Penerima harus diisi" />
                            <span class="k-invalid-msg" data-for="PenerimaDp"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3">Jenis<span style="color:red;">*</span></label>
                        <div class="col-md-7">
                            <select id="JenisDp" name="JenisDp" class="form-control input-sm" required validationmessage="Jenis harus diisi">
                                <option value="transfer">Transfer</option>
                                <option value="cash">Cash</option>
                            </select>
                            <span class="k-invalid-msg" data-for="JenisDp"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3">No Rekening<span style="color:red;">*</span></label>
                        <div class="col-md-7">
                            <div class="input-group input-group-sm">
                                @Html.Hidden("IdRekeningDp")
                                <input id="RekeningDp" name="RekeningDp" class="form-control input-sm" required validationmessage="Rekening harus diisi" readonly />
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#modalRekening">Browse</button>
                                </span>
                            </div>
                            <span class="k-invalid-msg" data-for="RekeningDp"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3">Jumlah<span style="color:red;">*</span></label>
                        <div class="col-md-7">
                            <input id="JumlahDp" name="JumlahDp" class="form-control-numeric-idr" required validationmessage="Jumalah harus diisi" />
                            <span class="k-invalid-msg" data-for="JumlahDp"></span>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn green" onclick="SaveDp($('#Condition').val());" id="btnSubmit">Submit</button>
            </div>
        </div>
    </div>
</div>

<div id="modalRekening" class="modal fade bs-modal-lg" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div id="modalForm" class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">List Rekening</h4>
            </div>
            <div class="modal-body">
                <div id="GridRekening"></div>
            </div>
        </div>
    </div>
</div>