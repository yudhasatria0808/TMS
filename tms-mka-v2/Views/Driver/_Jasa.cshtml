@using tms_mka_v2.Models
@model tms_mka_v2.Models.Driver
@{
    string currentController = (string)ViewContext.RouteData.Values["controller"];
    string currentAction = (string)ViewContext.RouteData.Values["action"];
}
<div class="row ">
    <div class="col-md-6">
        <div class="btn-group">
            <div class="caption">
                <h2>JASA</h2>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="btn-group pull-right">
            <span class="btn green" id="btnAdd" title="Jasa" onclick="ShowJasaPopup()">Add New Jasa</span>
        </div>
    </div>
</div>
<br />
<div class="form-group">
    <div id="gridJasa"></div>
</div>
<div id="modalFormJasa" class="modal fade" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div id="modalForm" class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Add New Jasa</h4>
            </div>
            <div class="modal-body">
                <form id="formModalJasa" class="form-horizontal">
                    <input name="JasaId" id="JasaId" type="hidden" />
                    <div class="form-group">
                        <label class="control-label col-md-4">Tanggal<span style="color:red;">*</span></label>
                        <div class="col-md-8">
                            <input id="TanggalJasa" name="TanggalJasa" class="form-control-datepicker" type="text" required data-required-msg="Tanggal harus diisi."/>
                            <span class="k-invalid-msg" data-for="TanggalJasa"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4">Keterangan<span style="color:red;">*</span></label>
                        <div class="col-md-8">
                            <textarea name="KeteranganJasa" id="KeteranganJasa" class="form-control" required validationmessage="Keterangan harus diisi"></textarea>
                            <span class="k-invalid-msg" data-for="KeteranganJasa"></span>
                        </div>
                    </div>
                    @*<div class="row">
                        <div class="col-md-12">

                        </div>
                    </div>*@
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn green" onclick="saveJasa($('#Condition').val());">Submit</button>
            </div>
        </div>
    </div>
</div>