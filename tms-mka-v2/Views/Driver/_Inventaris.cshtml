@using tms_mka_v2.Models
@model tms_mka_v2.Models.Driver
@{
    string currentController = (string)ViewContext.RouteData.Values["controller"];
    string currentAction = (string)ViewContext.RouteData.Values["action"];
}
<div class="row ">
    <div class="col-md-6">
        <div class="btn-group">
            <div class="caption">
                <h2>Inventaris</h2>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="btn-group pull-right">
            <button type="button" class="btn green" id="btnAdd" title="Inventaris" onclick="ShowInventarisPopup()">Add New Inventaris</button>
        </div>
    </div>
</div>
<br />
<div class="form-group">
    <div id="gridInventaris"></div>
</div>
<div id="modalFormInventaris" class="modal fade" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div id="modalForm" class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Add New Inventaris</h4>
            </div>
            <div class="modal-body">
                <form id="formModalInventaris" class="form-horizontal">
                    <input name="InventarisId" id="InventarisId" type="hidden"/>
                    <div class="form-group">
                        <label class="control-label col-md-4">Tanggal Pemberian<span style="color:red;">*</span></label>
                        <div class="col-md-8">
                            <input id="TanggalPemberian" name="TanggalPemberian" required data-required-msg="Tanggal Pemberian harus diisi" class='form-control-datepicker' />
                            <span class="k-invalid-msg" data-for="TanggalPemberian"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4">Tanggal Pengembalian</label>
                        <div class="col-md-8">
                            <input id="TanggalPengembalian" name="TanggalPengembalian" required data-required-msg="Tanggal Pengembalian harus diisi" class='form-control-datepicker' />
                            <span class="k-invalid-msg" data-for="TanggalPengembalian"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4">Nama Barang<span style="color:red;">*</span></label>
                        <div class="col-md-8">
                            <input name="IdNamaBarang" id="IdNamaBarang" type="text" class='form-control' required data-required-msg="Tanggal Pemberian harus diisi" />
                            <span class="k-invalid-msg" data-for="IdNamaBarang"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4">Keterangan</label>
                        <div class="col-md-8">
                            <textarea name="InventarisKeterangan" id="InventarisKeterangan" class="form-control"></textarea>
                            <span class="k-invalid-msg" data-for="InventarisKeterangan"></span>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn green" onclick="saveInventaris();">Submit</button>
            </div>
        </div>
    </div>
</div>