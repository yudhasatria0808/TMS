@using tms_mka_v2.Models
@model tms_mka_v2.Models.SettlementReg

<link rel="stylesheet" href="~/Content/metronic/bootstrap.min.css" />
<body>
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-md-12">
                <div class="row">
                    <h4 class="control-label col-md-12">Settlement Regular</h4>
                    <div class="col-md-6">
                        <div class="row">
                            <label class="col-xs-3 col-md-3">No SO</label>
                            <label class="col-xs-9 col-md-9">: @ViewBag.NoSO</label>
                        </div>
                        <div class="row">
                            <label class="col-xs-3 col-md-3">Customer</label>
                            <label class="col-xs-9 col-md-9">: @ViewBag.Customer</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="row">
                            <label class="col-xs-3 col-md-3">Vehicle No</label>
                            <label class="col-xs-9 col-md-9">: @ViewBag.VNo</label>
                        </div>
                        <div class="row">
                            <label class="col-xs-3 col-md-3">Driver</label>
                            <label class="col-xs-9 col-md-9">: @ViewBag.Driver</label>
                        </div>
                    </div>
                    <div class="col-xs-6 col-md-12"></div>
                </div>
            </div>

            <div class="col-xs-6 col-md-6">
                <div class="row">
                    <!--h2 class="control-label col-xs-12 col-md-12" style="text-align:right !important"><u>SETTLEMENT REGULAR</u></h2-->
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <table class="table">
                <thead>
                    <tr>
                        <td></td>
                        <td>Kas</td>
                        <td>Transfer</td>
                        <td>Voucher Solar</td>
                        <td>Voucher Kapal</td>
                        <td>Keterangan</td>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Yang Diterima</td>
                        <td>@Model.KasDiterima</td>
                        <td>@Model.TransferDiterima</td>
                        <td>@Model.SolarDiterima</td>
                        <td>@Model.KapalDiterima</td>
                        <td>@Model.KeteranganDiterima</td>
                    </tr>
                    <tr>
                        <td>Diakui Biaya</td>
                        <td>@Model.KasDiakui</td>
                        <td>@Model.TransferDiakui</td>
                        <td>@Model.SolarDiakui</td>
                        <td>@Model.KapalDiakui</td>
                        <td>@Model.KeteranganDiakui</td>
                    </tr>
                    <tr>
                        <td>Harus Kembali</td>
                        <td>@Model.KasKembali</td>
                        <td>@Model.TransferKembali</td>
                        <td>@Model.SolarKembali</td>
                        <td>@Model.KapalKembali</td>
                        <td>@Model.KeteranganKembali</td>
                    </tr>
                    <tr>
                        <td>Aktual Kembali</td>
                        <td>@Model.KasAktual</td>
                        <td>@Model.TransferAktual</td>
                        <td>@Model.SolarAktual</td>
                        <td>@Model.KapalAktual</td>
                        <td>@Model.KeteranganAktual</td>
                    </tr>
                    <tr>
                        <td>Selisih kembali</td>
                        <td>@Model.KasSelisih</td>
                        <td>@Model.TransferSelisih</td>
                        <td>@Model.SolarSelisih</td>
                        <td>@Model.KapalSelisih</td>
                        <td>@Model.KeteranganSelisih</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <hr />
        <div class="row">
            <div class="col-xs-8 col-md-8">
                <div class="row">
                    <label class="control-label col-xs-12 col-md-12"></label>
                </div>
            </div>
            <div class="col-xs-4 col-md-4">
                <div class="row">
                    <label class="control-label col-xs-6 col-md-6"></label>
                    <label class="control-label col-xs-6 col-md-6" style="text-align:right !important"></label>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-8 col-md-8">

            </div>
            <div class="col-xs-4 col-md-4">
                <div class="row">
                    <label class="control-label col-xs-12 col-md-12">@DateTime.Now.ToLongDateString() @DateTime.Now.ToShortTimeString()</label>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-8 col-md-8">

            </div>
            <div class="col-xs-4 col-md-4">
                <div class="row">
                    <label class="control-label col-xs-6 col-md-6" style="text-align:center">Diterima</label>
                </div>
            </div>
        </div>
    </div>
</body>